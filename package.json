{
  "name": "erixeditor",
  "version": "0.0.3",
  "description": "A rich text editor component with built-in toolbar and plugin system",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/erixeditor/erixeditor.esm.js",
  "exports": {
    ".": {
      "import": "./dist/erixeditor/erixeditor.esm.js",
      "require": "./dist/erixeditor/erixeditor.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./angular": {
      "import": "./dist/angular/index.js",
      "types": "./dist/angular/index.d.ts"
    },
    "./vue": {
      "import": "./dist/vue/components.js",
      "types": "./dist/vue/components.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs",
      "types": "./loader/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NopeThisIsShini/erix_editor.git"
  },
  "bugs": {
    "url": "https://github.com/NopeThisIsShini/erix_editor/issues"
  },
  "homepage": "https://github.com/NopeThisIsShini/erix_editor#readme",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "devDependencies": {
    "@stencil/angular-output-target": "^1.1.1",
    "@stencil/core": "^4.40.1",
    "@stencil/react-output-target": "^1.2.0",
    "@stencil/vue-output-target": "^0.11.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^24.3.0"
  },
  "license": "MIT",
  "keywords": [
    "editor",
    "wysiwyg",
    "rich-text",
    "html",
    "richtext",
    "text",
    "javascript",
    "typescript",
    "stencil",
    "web-component",
    "react",
    "angular",
    "vue",
    "prosemirror",
    "word-import",
    "docx"
  ],
  "dependencies": {
    "jszip": "^3.10.1",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-history": "^1.5.0",
    "prosemirror-keymap": "^1.2.3",
    "prosemirror-model": "^1.25.4",
    "prosemirror-schema-basic": "^1.2.4",
    "prosemirror-schema-list": "^1.5.1",
    "prosemirror-state": "^1.4.4",
    "prosemirror-tables": "^1.8.3",
    "prosemirror-view": "^1.41.4"
  }
}